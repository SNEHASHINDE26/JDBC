package jdbcTest;

import java.util.ArrayList;
import java.util.Scanner;


  public class MainTest {

	private static final String Username = null;
	
	static Scanner sc1 = new Scanner(System.in);
	
	public static void main(String[] args) {
		
		System.out.println("Select mode of operation");
		System.out.println("1.Add Record");
		System.out.println("2.Display Record");
		
		Scanner sc = null;
		int choice = sc.nextInt();
		
		System.out.println("--------------------------");
		
		if(choice==1)
		{
			insertRecord();
		}
		if(choice==2)
		{
			displayRecord();
		}
		
		else if(choice==3)
		{
			System.out.println("Invalid Choice");
		}
	 }
	
	 static void insertRecord() {
			
		System.out.println("Enter User Name");
		String Name = sc1.next();
		
		System.out.println("Enter Password");	
		double Pass = sc1.nextDouble();
		
		System.out.println("Enter Age");
		int Age = sc1.nextInt();
		
		System.out.println("Enter Contact Number ");
		double Number = sc1.nextDouble();
		
		System.out.println("Enter City ");
		String City = sc1.next();
		
	     Test1 T1 = new Test1();
		  
	      T1.setUsername(Name);
		  T1.setPassword(Pass);
		  T1.setage(Age);
		  T1.setCno(Number);
		  T1.setcity(City);
		
		//pass DTO object as argument to addProduct()method
		Test1 R1 = new Test1();
		int count = T1.addRecord(T1);
		System.out.println(count+"Record INSERTED SUCCESSFULLY");
	 }
	    
	private static void displayRecord() {
		
		Test1 T1 = new Test1();
		ArrayList<Record>data = T1.displayRecord();
		
		for(Record r1:data) {
			
		System.out.println(r1);
		System.out.println("Record DISPLAYED SUCCESSFULLY");
		}
	}
}
